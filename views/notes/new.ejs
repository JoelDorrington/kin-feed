<% include ../partials/header %>

<% if(!users){ var users = null } %>
<div class="ui container">
  <div class="ui three column grid">
   <!--Vertical Menu Bar-->
      <div class="left floated four wide column">
        <div class="ui secondary vertical pointing menu">
          <a class="item" href="/hub">Home</a>
          <a class="active item" href="/notes/new">Leave a Note</a>
          <a class="item">Pinned Notes</a>
          <a class="item" href="/public">Public Notes</a>
        </div>
      </div>
  <!--Form-->
    <div class="right floated twelve wide column">
      <% if(!users){ %>
        <h1 class="ui huge header">Leave a note in the <%=thread%> thread.</h1>
      <% } %>
      <form action="/notes" method="POST" class="ui form">
        <div class="field">
          <label>Note Type</label>
          <div class="ui selection dropdown">
            <input type="hidden" name="note[kind]" id="kind" required>
            <i class="dropdown icon"></i>
            <div class="default text">Note Type</div>
            <div class="menu">
              <div class="item" data-value="Gratitude">Gratitude</div>
              <div class="item" data-value="Admiration">Admiration</div>
              <div class="item" data-value="Memory">Memory</div>
              <div class="item" data-value="Encouragement">Encouragement</div>
            </div>
          </div>
        </div>
        <div class="inline fields">
          <label for="pub">Public or Private?</label>
          <div class="field">
            <div class="ui radio checkbox">
              <input type="radio" name="note[pub]" checked value="True" tabindex="0" class="hidden">
              <label>Public</label>
            </div>
          </div>
          <% if(users){ %>
            <div class="field">
              <div class="ui radio checkbox">
                <input type="radio" name="note[pub]" checked value="False" tabindex="0" class="hidden">
                <label>Private</label>
              </div>
            </div>
          <% } %>
        </div>
        <div class="field">
          <label><%= users ? "Recipient" : "Thread" %></label>
          <% if(users){ %>
            <div class="ui selection dropdown">
              <input type="hidden" name="note[recipient]" required>
              <i class="dropdown icon"></i>
              <div class="default text">Recipient</div>
              <div class="menu">
                  <% users.forEach(function(user){ %>
                    <% if(!user._id.equals(currentUser._id)){ %>
                      <div class="item" data-value="<%= user._id %>"><%= user.username %></div>
                    <% } %>
                  <% }) %>
              </div>
            </div>
          <% } else { %>
            <input name="thread" value="<%= thread %>" class="ui disabled input">
          <% } %>
        </div>
        <div class="field">
          <label>Note</label>
          <textarea class="" name="note[content]" lines="2" required></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/semantic.min.js"></script>
<script>
  $(document).ready(function(){
    $('.ui.selection.dropdown').dropdown();
    $('.ui.radio.checkbox').checkbox();
  });
</script>
<% include ../partials/footer %>